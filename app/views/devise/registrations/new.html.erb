<section class='section'>
  <div class='container'>
  <div class='columns is-centered'>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <h1 class="heading"> Sign Up</h1>
 
    <div class='field'>
    <div class='control'>
    <%= f.input :name, required:true, placeholder:'Enter name',input_html: { class:'input'},wrapper:false, label_html:{class:'label'} %>
    </div>
  </div>
    

    <div class='field'>
    <div class='control'>
      <%= f.input :username, required:true, placeholder:'Enter username',input_html: { class:'input'},wrapper:false, label_html:{class:'label'} %>
    </div>
  </div>
    
    <div class='field'>
      <div class='control'>
        <%= f.input :email,required: true,input_html: { class:'input'}, placeholder:'Enter email',wrapper:false, label_html:{class:'label'}  %>
      </div>
    </div>

    <div class='field'>
        <div class='control'>
          <%= f.input :password,required: true,input_html: {class:'input'}, wrapper:false, label_html:{class:'label'} ,hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
          input_html: { class:'input' }, placeholder:'Enter password' %>
        </div>
    </div>
    
    <div class='field'>
      <div class='control'>
      <%= f.input :password_confirmation,required: true,input_html: { class: "input" }, wrapper:false, label_html: {class:'label'}, placeholder:'Confirm password' %>
      </div>
    </div>
            
    <div class='field'>
        <div class='control'>
        <%= f.button :submit, "Sign up", class:'button is-info is-medium' %>
        </div>
    </div>
    
    <%= render "devise/shared/links" %>
<% end %>

</div>
</div>
</section>

