

<section class="section">

  <div class="container">

    <div class="columns is-centered">

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>
  <h2 class="heading">Forgot your password?</h2>


  <div class="feild">
    <div class="control">
    <%= f.input :email,required: true,autofocus: true,input_html: { class:'input' },wrapper:false ,label_html: {class:'label'} %>
    </div>
    </div>
  </br>
  <div class="field">
    <div class="control">
    <%= f.button :submit, "Send me reset password instructions", class:"button is-info is-small" %>
  </div>
  </div>
  <%= render "devise/shared/links" %>
<% end %>


</div>
</div>
</section>