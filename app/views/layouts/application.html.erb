<!DOCTYPE html>
<html>
  <head>
    <title>Twitter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="myProjects/webProject/icofont/css/icofont.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar is-info" role="navigation" aria-label="main navigation">
  <div class="navbar-brand">
  <i class="fa fa-twitter icon fa-2x ml-5 mt-4"></i>
    <%= link_to 'TWITTER', tweets_path, class:"text-white navbar-item" %>
    <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
    </a>
  </div>

    <div class="navbar-end">
      <div class="navbar-item">

        <div class="buttons">
        <p class="control"> 
          <%= link_to 'New Tweet', root_path, class:"button is-light" %>
        </p>
        
        <% if user_signed_in? %>
          <p class="control">
            <%= link_to current_user.name, edit_user_registration_path, class:'button is-info'%>
          <p>
          <p class="control">
            <%= link_to 'Logout', destroy_user_session_path, method: 'delete', class:'button is-info' %>
          </p>
        <% else %>
        <p class="control">
          <%= link_to 'Sign Up', new_user_registration_path, class:"button is-info" %>
        <p>
        <p class="control">
          <%= link_to 'Sign In', new_user_session_path, class:"button is-info" %>
        <p>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</nav>


    <%= yield %>
  </body>
</html>
